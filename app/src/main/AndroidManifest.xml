<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bicutanbites">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Bicutan Bites"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BicutanBites">

        <!-- CRITICAL FIX: ADD THIS LINE FOR ADMOB/ADS SDK INITIALIZATION -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />
        <!-- NOTE: This is Google's official sample App ID for testing. -->

        <!-- Login screen as launcher -->
        <activity android:name=".LoginActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Create Account screen -->
        <activity android:name=".CreateAccountActivity" />

        <!-- Main screen -->
        <activity android:name=".HomeActivity" />

        <!-- Edit Profile screen -->
        <activity android:name=".EditProfileActivity" />

        <!-- Checkout screen -->
        <activity android:name=".CheckoutActivity" />

        <activity
            android:name=".NotificationsActivity"
            android:exported="false"
            android:theme="@style/Theme.BicutanBites" />
        <service
            android:name=".ui.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>



</manifest>
